<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Итоговая стоимость:"
        android:id="@+id/textOverCostInfo"
        android:layout_gravity="center_horizontal"
        android:textColor="#d33232"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textOverCost"
            android:layout_gravity="center_horizontal"
            android:textColor="#701ac7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/currency"
            android:id="@+id/textView4"
            android:layout_toRightOf="@+id/textOverCost"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/over_cost_info_pay"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"/>

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTypeCard"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editCardNumber"
        android:layout_gravity="center_horizontal"
        android:hint="Номер рассчётной карты"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:id="@+id/buttonDialogCancel"
            android:layout_marginRight="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оплатить"
            android:id="@+id/buttonPayForPlaces"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>